@model UniversityApp.Core.ViewModels.EnrollmentViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_SecretariesLayout.cshtml";
}


<h4 style="text-align: center;">Create enrollment</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseTitle" class="control-label"></label>
                <select asp-for="CourseTitle" class="form-control" asp-items="ViewBag.CourseTitle"></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentCnp" class="control-label"></label>
                <select asp-for="StudentCnp" class="form-control" asp-items="ViewBag.StudentCnp"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" id="button-form"/>
            </div>
        </form>
    </div>
</div>

