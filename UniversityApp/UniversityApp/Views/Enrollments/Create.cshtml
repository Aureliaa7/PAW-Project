@model UniversityApp.Core.ViewModels.CreateEnrollmentViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_SecretariesLayout.cshtml";
}


<div class="row" style="margin-top: 40px">
    <div class="col-md-4 create-enrollment-container">
        <h4 class="align-text-to-center">Create enrollment</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <select id="selected_course" asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseTitle" onchange="get_teachers_by_course_id()"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <select id="teacher" asp-for="TeacherId" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="StudentCnp" class="control-label"></label>
                <select asp-for="StudentCnp" class="form-control" asp-items="ViewBag.StudentNames"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" id="button-form" />
            </div>
        </form>
    </div>
</div>

