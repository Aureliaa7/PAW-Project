@model UniversityApp.Core.DomainEntities.Student

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_StudentsLayout.cshtml";
}


    <div class="modal" tabindex="-1" role="dialog" id="myModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>You have successfully logged in!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

<div class="container ">

    <div class="row">
        <div class="jumbotron">
            @{ if (Model != null)
                {
                    <div class="bg-transparent">
                        <br />
                        <br />
                        <br />
                        <h4>First name:  @Model.FirstName</h4>
                        <h4>Last name: @Model.LastName</h4>
                        <h4>CNP: @Model.Cnp</h4>
                        <h4>Phone number: @Model.PhoneNumber</h4>
                        <h4>Email: @Model.Email</h4>
                        <h4>Study year: @Model.StudyYear</h4>
                        <h4>Section: @Model.Section</h4>
                        <h4>Group name: @Model.GroupName</h4>
                    </div>
                }
            }

        </div>



        <div class="col-sm-6">
            <div id="studentCarousel" class="carousel slide homeCarousel" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#studentCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#studentCarousel" data-slide-to="1"></li>
                    <li data-target="#studentCarousel" data-slide-to="2"></li>
                    <li data-target="#studentCarousel" data-slide-to="3"></li>
                    <li data-target="#studentCarousel" data-slide-to="4"></li>
                    <li data-target="#studentCarousel" data-slide-to="5"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="../images/q1.jpg" alt="Quote" style="width:560px; height: 480px;">
                    </div>
                    <div class="item">
                        <img src="../images/q2.jpg" alt="Quote" style="width:560px; height: 480px;">
                    </div>
                    <div class="item">
                        <img src="../images/q3.jpg" alt="Quote" style="width:560px; height: 280px;">
                    </div>
                    <div class="item">
                        <img src="../images/notebook.jpeg" alt="Notebook" style="width:560px; height: 480px;">
                    </div>
                    <div class="item">
                        <img src="../images/q3.png" alt="Quote" style="width:560px; height: 480px;">
                    </div>
                    <div class="item">
                        <img src="../images/idea.jpeg" alt="Quote" style="width:560px; height: 480px;">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#studentCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#studentCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>
</div>




<script type="text/javascript">
       $(document).ready(function () {
        if (sessionStorage.getItem('#myModal') !== '1') {
            $('#myModal').modal('show');
            sessionStorage.setItem('#myModal', '1');
        }
    });
</script>
