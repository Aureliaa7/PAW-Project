@model IEnumerable<UniversityApp.Core.ViewModels.EnrollmentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SecretariesLayout.cshtml";
}

@if (Model.Any())
{
    <h4 style="text-align:center">Enrollments</h4>

    <table class="table table-dark" aria-labelledby="UniversityApp">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.CourseTitle)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.StudentCnp)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentCnp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h5>There are no enrollments yet...</h5>
    </div>
}
